<%- include('../layout', { body: `
<div class="row mb-4">
    <div class="col-md-6">
        <h1><i class="bi bi-building"></i> Warehouses</h1>
    </div>
    <div class="col-md-6 text-end">
        ${typeof user !== 'undefined' && user ? `
        <a href="/warehouses/add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Warehouse
        </a>
        ` : ''}
    </div>
</div>

${typeof warehouses !== 'undefined' && warehouses.length > 0 ? `
<div class="row g-4">
    ${warehouses.map(warehouse => `
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-building"></i> ${warehouse.name}
                </h5>
                <p class="text-muted">
                    <i class="bi bi-geo-alt"></i> ${warehouse.location}
                </p>
                <hr>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">${warehouse.bookCount}</h3>
                        <small class="text-muted">Books stored</small>
                    </div>
                    <div>
                        <i class="bi bi-book fs-1 text-primary opacity-25"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light">
                <small class="text-muted">
                    ID: <code>${warehouse.id}</code>
                </small>
            </div>
        </div>
    </div>
    `).join('')}
</div>
` : `
<div class="alert alert-info">
    <h5><i class="bi bi-info-circle"></i> No warehouses found</h5>
    <p class="mb-0">Get started by adding your first warehouse location.</p>
</div>
`}
` }) %>
