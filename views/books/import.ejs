<%- include('../layout', { body: `
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="bi bi-file-earmark-excel"></i> Import Books from Excel
                </h4>
            </div>
            <div class="card-body">
                ${typeof success !== 'undefined' && success ? `
                <div class="alert alert-success" role="alert">
                    ${success}
                </div>
                ` : ''}

                ${typeof error !== 'undefined' && error ? `
                <div class="alert alert-danger" role="alert">
                    ${error}
                </div>
                ` : ''}

                ${typeof errors !== 'undefined' && errors ? `
                <div class="alert alert-warning">
                    <h6>Import Errors:</h6>
                    <ul class="mb-0">
                        ${errors.map(err => `<li>${err}</li>`).join('')}
                    </ul>
                </div>
                ` : ''}

                <div class="alert alert-info">
                    <h6><i class="bi bi-info-circle"></i> Excel File Format:</h6>
                    <p class="mb-2">Your Excel file should have the following columns:</p>
                    <ul class="mb-0">
                        <li><strong>title</strong> (required) - Book title</li>
                        <li><strong>author</strong> (required) - Author name</li>
                        <li><strong>isbn</strong> (optional) - ISBN number</li>
                        <li><strong>warehouseId</strong> (required) - Warehouse ID number</li>
                    </ul>
                    <p class="mt-2 mb-0"><small>Note: Column names are case-insensitive</small></p>
                </div>

                <form action="/books/import" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="excelFile" class="form-label">
                            Select Excel File <span class="text-danger">*</span>
                        </label>
                        <input type="file" class="form-control" id="excelFile" name="excelFile" 
                               accept=".xlsx,.xls" required>
                        <small class="form-text text-muted">Accepted formats: .xlsx, .xls</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-upload"></i> Upload and Import
                        </button>
                        <a href="/books" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Books
                        </a>
                    </div>
                </form>

                <hr class="my-4">

                <div class="card bg-light">
                    <div class="card-body">
                        <h6><i class="bi bi-download"></i> Sample Excel Template</h6>
                        <p class="mb-2">Download a sample template to see the correct format:</p>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>title</th>
                                    <th>author</th>
                                    <th>isbn</th>
                                    <th>warehouseId</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>To Kill a Mockingbird</td>
                                    <td>Harper Lee</td>
                                    <td>9780061120084</td>
                                    <td>1</td>
                                </tr>
                                <tr>
                                    <td>1984</td>
                                    <td>George Orwell</td>
                                    <td>9780451524935</td>
                                    <td>1</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
` }) %>
