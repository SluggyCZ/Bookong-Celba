<%- include('../layout', { body: `
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-book"></i> Book Details
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h3>${typeof book !== 'undefined' ? book.title : ''}</h3>
                        <p class="text-muted">by ${typeof book !== 'undefined' ? book.author : ''}</p>

                        <hr>

                        <dl class="row">
                            <dt class="col-sm-4">Book ID:</dt>
                            <dd class="col-sm-8"><code>${typeof book !== 'undefined' ? book.id : ''}</code></dd>

                            <dt class="col-sm-4">ISBN:</dt>
                            <dd class="col-sm-8">${typeof book !== 'undefined' && book.isbn ? book.isbn : '<span class="text-muted">Not provided</span>'}</dd>

                            <dt class="col-sm-4">Warehouse:</dt>
                            <dd class="col-sm-8">
                                ${typeof book !== 'undefined' && book.warehouse ? `
                                    <i class="bi bi-building"></i> ${book.warehouse.name}<br>
                                    <small class="text-muted">${book.warehouse.location}</small>
                                ` : '<span class="text-muted">Not assigned</span>'}
                            </dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                ${typeof book !== 'undefined' && book.isAvailable ? 
                                    '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Available</span>' : 
                                    '<span class="badge bg-warning"><i class="bi bi-clock-history"></i> Borrowed</span>'}
                            </dd>

                            <dt class="col-sm-4">Added:</dt>
                            <dd class="col-sm-8">
                                ${typeof book !== 'undefined' ? new Date(book.createdAt).toLocaleDateString() : ''}
                            </dd>

                            <dt class="col-sm-4">Last Updated:</dt>
                            <dd class="col-sm-8">
                                ${typeof book !== 'undefined' ? new Date(book.updatedAt).toLocaleDateString() : ''}
                            </dd>
                        </dl>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">QR Code</h6>
                                ${typeof qrCodeUrl !== 'undefined' ? `
                                    <img src="${qrCodeUrl}" alt="QR Code" class="img-fluid mb-2" style="max-width: 200px;">
                                    <p class="small text-muted mb-0">Scan to view book ID</p>
                                    <p class="small"><code>BOOK-${book.id}</code></p>
                                ` : ''}
                            </div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="d-flex gap-2">
                    <a href="/books" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Books
                    </a>
                    ${typeof user !== 'undefined' && user && (user.role === 'admin' || user.role === 'librarian') ? `
                    <a href="/books/edit/${book.id}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <button class="btn btn-danger" onclick="confirmDelete()">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    ` : ''}
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> About QR Codes</h5>
            </div>
            <div class="card-body">
                <p class="small">
                    Each book has a unique QR code that can be scanned for quick identification. 
                    The QR code contains the book's ID in the format <code>BOOK-{ID}</code>.
                </p>
                <p class="small mb-0">
                    <strong>Use cases:</strong>
                </p>
                <ul class="small">
                    <li>Quick book lookup</li>
                    <li>Inventory management</li>
                    <li>Mobile scanning</li>
                    <li>Physical book labels</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete() {
    if (confirm('Are you sure you want to delete this book? This action cannot be undone.')) {
        // TODO: Implement delete functionality
        alert('Delete functionality to be implemented');
    }
}
</script>
` }) %>
