<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="bi bi-speedometer2"></i> Dashboard
        </h1>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <!-- Total Books Card -->
    <div class="col-md-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Total Books</h6>
                        <h2 class="mt-2 mb-0"><%= stats.totalBooks %></h2>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-book"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-primary bg-opacity-75 border-0">
                <a href="/books" class="text-white text-decoration-none">
                    View all books <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Available Books Card -->
    <div class="col-md-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Available Books</h6>
                        <h2 class="mt-2 mb-0"><%= stats.availableBooks %></h2>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-success bg-opacity-75 border-0">
                <small class="text-white">Ready to borrow</small>
            </div>
        </div>
    </div>

    <!-- Borrowed Books Card -->
    <div class="col-md-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Borrowed</h6>
                        <h2 class="mt-2 mb-0"><%= stats.borrowedBooks %></h2>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-clock-history"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-warning bg-opacity-75 border-0">
                <small class="text-white">Currently checked out</small>
            </div>
        </div>
    </div>

    <!-- Total Warehouses Card -->
    <div class="col-md-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-0">Warehouses</h6>
                        <h2 class="mt-2 mb-0"><%= stats.totalWarehouses %></h2>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-building"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info bg-opacity-75 border-0">
                <a href="/warehouses" class="text-white text-decoration-none">
                    View warehouses <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap gap-2">
                    <% if (user.role === 'admin' || user.role === 'librarian') { %>
                    <a href="/books/add" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Book
                    </a>
                    <a href="/books/import" class="btn btn-success">
                        <i class="bi bi-file-earmark-excel"></i> Import from Excel
                    </a>
                    <a href="/warehouses/add" class="btn btn-info text-white">
                        <i class="bi bi-building-add"></i> Add Warehouse
                    </a>
                    <% } %>
                    <a href="/books/search" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Search Books
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Books</h5>
            </div>
            <div class="card-body">
                <% if (recentBooks && recentBooks.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>ISBN</th>
                                <th>Warehouse</th>
                                <th>Status</th>
                                <th>Added</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentBooks.forEach(book => { %>
                            <tr>
                                <td><%= book.title %></td>
                                <td><%= book.author %></td>
                                <td><%= book.isbn || 'N/A' %></td>
                                <td><%= book.warehouse ? book.warehouse.name : 'N/A' %></td>
                                <td>
                                    <% if (book.isAvailable) { %>
                                    <span class="badge bg-success">Available</span>
                                    <% } else { %>
                                    <span class="badge bg-warning">Borrowed</span>
                                    <% } %>
                                </td>
                                <td><%= new Date(book.createdAt).toLocaleDateString() %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                <p class="text-muted mb-0">No books added yet.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>
